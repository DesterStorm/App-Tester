<div class="section">
  <%= simple_form_for @exam do |f| %>
    <%= f.input :name, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'}  %>
  <div class="field">
    <div class="section">
      <div class="field">
        <div class="control">
          <%= f.hidden_field :job_post_id %>
          <%= f.simple_fields_for :exam_questions do |q| %>
          <br/><br/>
          <div class="field">
            <div class="control">
              <%= q.input :description, input_html: {class: 'textarea'}, wrapper: false, label_html: {class: 'label'}  %>
              <br/><br/>
              <%= q.simple_fields_for :exam_answers do |a| %>
                <%= f.hidden_field :exam_question_ids %>
              <div class="field">
                <div class="control">
                  <fieldset>
                    <%= a.hidden_field :letter %>
                    <%= a.label :letter, a.object.letter %>
<!--                    DO NO CHANGE THIS LINE -->
                    <%= a.input :answer, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'}  %>
<!--                    ^^^^^^^^^^^^^^^^^^^^^^ -->
                    <h3>If correct answer, mark this bubble.</h3>
                    <%= a.radio_button :correct, :correct_answer  %><br/><br/>
                  </fieldset>
                </div>
              </div>
              <% end %>
            </div>
          </div>
          <% end %>
          <%= f.button :submit, class: "button is-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>