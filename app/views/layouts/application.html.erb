<!DOCTYPE html>
<html>
  <head>
    <title>AppTester</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="hero is-primary is-medium">
      <!-- Hero head: will stick at the top -->
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <%= link_to 'App-Tester Home', root_path, class: "navbar-item" %>
              <span class="navbar-burger burger" data-target="navMenu">
              <span></span>
              <span></span>
              <span></span>
            </span>
            </div>
            <div id="navMenu" class="navbar-menu">
              <div class="navbar-end">
<!--                </a>-->
<!--                <a class="navbar-item">-->
<!--                  TODO: Add Take Test functionality-->
                  <%#= link_to 'Take Test', new_exam_path, class: "navbar-item" %>
<!--                </a>-->
<!--                <a class="navbar-item">-->
<!--                  TODO: Add About Us page-->
                  <%#= link_to 'About Us', about_us_path, class: "navbar-item" %>
<!--                </a>-->
                <a class="navbar-item">
                  <%= link_to "Create New Job Post", new_job_post_path, class: "navbar-item" %>
                </a>
              </div>
            </div>
          </div>
        </nav>
        <script type="text/javascript">
            (function() {
                var burger = document.querySelector('.burger');
                var nav = document.querySelector('#'+burger.dataset.target);

                burger.addEventListener('click', function () {
                    burger.classList.toggle('is-active');
                    nav.classList.toggle('is-active');
                });
                })();
        </script>
      </div>

      <!-- Hero content: will be in the middle -->
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            Applicant Tester
          </h1>
        </div>
      </div>

    </section>
    <%= render 'layouts/alerts' %>
    <%= yield %>
  </body>
</html>
